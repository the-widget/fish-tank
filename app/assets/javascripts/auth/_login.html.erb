<div class="page-header">
  <h1>Log In</h1>
  {{error}}
</div><br>
<div class="col-md-4 col-centered text-centered">
  <form name="loginForm"ng-submit="login()">
  
    <fieldset class="form-group">
      <input name="userEmail" 
             type="email"
             class="form-control" 
             placeholder="Email" 
             ng-model="user.email"
             ng-minlength="5"
             ng-maxlength="30"
             required>
      <div ng-messages="loginForm.userEmail.$error" ng-show=" loginForm.userEmail.$touched">
        <div ng-message="required"> You did not enter an email address</div>
        <div ng-messages-include="validations/errorMessages.html"></div>
      </div>
    </fieldset>
  
    <fieldset class="form-group">
      <input name="userPassword" 
             type="password"
             class="form-control" 
             placeholder="Password" 
             ng-model="user.password"
             ng-minlength="5"
             ng-maxlength="30"
             required>
      <div ng-messages="loginForm.userPassword.$error" ng-show="  loginForm.userPassword.$touched">
        <div ng-message="required"> Please enter a password</div>
        <div ng-messages-include="validations/errorMessages.html"></div>
      </div>
    </fieldset>
    
    <input type="submit" class="btn btn-default" value="Log In">
  </form>
</div>




